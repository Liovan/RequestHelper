          <i class="fa fa-users"></i> <span> مدیریت کارمندان</span> <i class="fa fa-angle-left pull-left"></i>
        </a>
        <ul class="treeview-menu">
          <li><a href="<%= staffs_path %>"><i class="fa fa-toggle-left"></i>  کارمندان</a></li>
          <li><a href="<%= places_path %>"><i class="fa fa-toggle-left"></i>  سمت</a></li>
        </ul>
      </li>
      <%end%>
      <li class=" treeview">
        <a href="#">
          <i class="fa fa-location-arrow"></i> <span> درخواست دانشجویان</span> <i class="fa fa-angle-left pull-left"></i>
        </a>
        <ul class="treeview-menu">
          <li class="active"><a href="<%= requests_path %>"><i class="fa fa-toggle-left"></i>  درخواست ها</a></li>
          </li>
          <li class="active"><a href="<%= prints_requests_path %>"><i class="fa fa-toggle-left"></i>صدور درخواست ها</a></li>
          </li>
        </ul>
      </li>
      <% if current_user.place_id==nil %>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-database"></i> <span>ماژول ها</span> <i class="fa fa-angle-left pull-left"></i>
        </a>
