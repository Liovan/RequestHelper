<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-right image">
        <%= image_tag "user",class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <p><%= "#{current_user.f_name} #{current_user.l_name}" if present? %></p>
        <span style="font-size: 10px"><i class="fa fa-circle text-success"></i>
        <span>زمان آنلاین بودن:</span>
          <span><%= time_ago_in_words(current_user.last_login_date) if current_user.last_login_date.present? %></span>
          <p>
            <span style="font-size: 10px"><i class="fa fa-circle text-aqua"></i> </span>
            <%= current_user.place.name if current_user.place.present? %>
          </p>
        </span>
      </div>
    </div>
    <ul class="sidebar-menu">
      <li class="header">فهرست اصلی</li>
      <% if current_user.place_id==nil || current_user.place_id==1 || current_user.place_id==6 %>
