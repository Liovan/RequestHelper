<header class="main-header">

  <a href="" class="logo">

    <span class="logo-mini"><span class="fa fa-users"></span></span>

    <span class="logo-lg"><span style="font-family: web_Yekan" >سامانه </span> <span style="color: #ffffff;font-weight: bold;font-family: web_Yekan"><%= $APP_NAME %></span></span>
  </a>

  <nav class="navbar navbar-static-top" role="navigation">

    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">

        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag "user",class: "user-image" %>
            <span class="hidden-xs"><%= "#{current_user.f_name} #{current_user.l_name}" if present? %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= image_tag "user",class: "img-circle" %>
              <p>
                <span><%= current_user.l_name if present? %></span>
              </p>
            </li>

            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "خروج",logout_path,method: :delete,class:"btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
        <!-- Control Sidebar Toggle Button -->
      </ul>
    </div>
  </nav>
</header>
