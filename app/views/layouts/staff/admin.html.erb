<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= yield :title %></title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'admin/font-awesome' ,'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'admin/font' ,'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'admin/bootstrap.min' ,'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'admin/AdminLTE' ,'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'admin/skins/_all-skins.min' ,'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'admin/bootstrap-rtl.min' ,'data-turbolinks-track': 'reload' %>
  <%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= yield :stylesheet %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'admin/html5shiv.min' , 'data-turbolinks-track': 'reload' %>

  <%= yield :javascript %>
</head>
<body class="skin-purple sidebar-mini">
  <div class="wrapper">
    <%= render partial:"layouts/staff/header" %>
    <%= render partial:"layouts/staff/menu" %>
    <div class="content-wrapper">
        <% if flash[:success].present? && !flash[:success].nil? %>
          <div class="alert alert-success alert-dismissable fade in">
            <p><%=flash[:success] %></p>
          </div>
          <%elsif flash[:warning].present? && !flash[:warning].nil? %>
          <div class="alert alert-warning alert-dismissable fade in">
            <p><%=flash[:warning] %></p>
          </div>
        <%end%>
      <%= yield %>  <!-- ***************** Main Content ***************** -->
    </div>
    <%= render partial:"layouts/staff/footer" %>
    <%= javascript_include_tag 'admin/bootstrap.min' , 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/app.min' , 'data-turbolinks-track': 'reload' %>
    <%= yield :javascript_end_page %>
    <%= yield :script_end_page %>
  </div>
</body>
</html>
