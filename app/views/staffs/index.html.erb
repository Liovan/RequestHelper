<% title 'مدیریت کارمندان' %>
<% javascript "admin/datatables/jquery.dataTables.min" %>
<% javascript "admin/datatables/dataTables.bootstrap.min" %>
<% javascript "validator/validator.min" %>
<% stylesheet "admin/datatables/dataTables.bootstrap.min" %>
<% script "$(document).ready(function(){$('#staff').DataTable({'language':lng_persian});});$('#StaffForm').validator();" %>


<section class="content">
  <section style="margin-bottom:4px">
  <%= link_to  new_staff_path,class:"btn btn-primary",remote:true do %>
     <span class="fa fa-user-plus" style="font-size: 20px"></span>
  <%end%>
    <%= link_to  sessions_path,class:"btn btn-primary" do %>
        <span class="fa fa-chevron-left" style="font-size: 20px"></span>
    <%end%>
  </section>
<div class="box box-warning">
  <div class="box-header with-border">
    <h3 class="box-title">
      مشخصات کارمندان</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
    </div>
  </div>
  <div class="box-body" style="display: block;">
    <div id="alert_respond"></div>
    <table id="staff" class="table table-striped table-bordered" border="1">
      <thead>
      <tr>
        <th>نام</th>
        <th>نام خانوادگی</th>
        <th>سمت</th>
        <th>نام کاربری</th>
        <th>آخرین تاریخ ورود</th>
        <th>عملیات</th>
      </tr>
      </thead>
      <tbody>
      <% @staffs.each do |staff| %>
        <%= render partial: "staffs/staff",locals:{staff:staff} %>
      <%end%>
      </tbody>
    </table>
  </div>
</div>
</section>

<div id="StaffForm" class="modal fade" role="dialog">
<!-- render by js -->
</div>
