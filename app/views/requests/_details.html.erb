<div class="col-lg-12 col-md-12">
  <div class="col-lg-5" style="margin-bottom: 5px">
    <span class="glyphicon glyphicon-time"></span>
    <span>زمان ارسال درخواست : </span>
    <span> <%= time_ago_in_words(request.created_at) %>پیش</span>
  </div>
</div>

<table class="table table-striped table-bordered table-hover table-responsive" style="overflow-x: auto">
    <tr>
      <% request.needs.each do |need| %>
      <th><%= need.name %></th>
    </tr>
    <tr>
      <% request.result_students.each do |result| %>
      <td><%=
        if need.input_type==3
        result.value=='f' ?  "خیر" : "بله"
          else
            result.value
         end
      %></td>
      <%end%>
    </tr>
      <%end%>
</table>