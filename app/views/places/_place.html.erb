<% if place.present? && !place.nil? %>
<div class="col-lg-2 inline place_<%=place.id%>">
  <div class="col-lg-12 btn btn-info" style="margin:3px">
    <i class="fa fa-user fa-5x"></i><br/>
    <%= place.name %>
    <div>
      <%= button_tag class: "btn btn-warning btn-sm","data-toggle":"modal","data-target":"#EditPlace_#{place.id}" do  %>
          <span class="fa fa-pencil-square-o"></span>
      <%end%>
      <%= link_to place,class: "btn btn-danger btn-sm",method: :delete,remote:true  do  %>
          <span class="fa fa-times"></span>
      <%end%>
    </div>
  </div>
</div>
<%end%>


    <div id="EditPlace_<%=place.id%>" class="modal fade" role="dialog">
      <%=form_for place,method: :patch,"data-toggle":"validator",role:"form",remote:true do |item| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" style="font-family: web_Yekan">
              <span class="fa fa-users "></span>
              <span style="color: #ffa049">ویرایش </span>سمت جدید
            </h4>
          </div>
          <div class="modal-body">
            <div class="form-group form-inline">
              <%= item.text_field :name,placeholder:"نام سمت",class:"form-control","data-error":"لطفاً فیلد نام را پر نمایید",required:true  %>
              <div class="help-block with-errors" style="display:inline"><span style="color:#F52559">*</span> اجباری</div>
            </div>
          </div>
          <div class="modal-footer">
            <%= submit_tag "ویرایش",class:"btn btn-success pull-right" %>
            <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
          </div>
        </div>
      </div>
      <%end%>
    </div>
